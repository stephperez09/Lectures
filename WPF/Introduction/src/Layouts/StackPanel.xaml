<Window x:Class="Layouts.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d"
        Title="Stack Panel demo" Height="300" Width="720.763" FontSize="16">
   <StackPanel>
      <Label Background="Gray">In a StackPanel, child controls fill to the size of the panel.</Label>
      <Label Background="Coral">Each child is "stacked" below/to the right of the previous, depending on the panel's Orientation</Label>
      <StackPanel Orientation="Horizontal" Background="Red">
         <CheckBox>Panels can be nested</CheckBox>
         <CheckBox>As you might expect</CheckBox>
         <TextBox>Using the magic of polymorphism</TextBox>
      </StackPanel>
   </StackPanel>
</Window>
